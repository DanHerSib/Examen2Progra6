@page
@model WebApp.Pages.Orden.EditModel
@{
}

<div id="AppEdit" class="container">
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue? "Actualizar": "Nueva Orden")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdOrden" />


                <div class="form-group mb-3">
                    <label for="Entity.IdProducto" class="form-label">Producto</label>

                    <select asp-for="Entity.IdProducto" class="form-select"
                            asp-items="@(new SelectList(Model.ProductoLista,"IdProducto","NombreProducto","PrecioProducto"))" required>
                    </select>
                </div>

                <!--Auto fill--> <div class="form-group mb-3">
                    <label for="Entity.NombreProducto" class="form-label">Nombre Producto</label>
                    <input type="text" class="form-control" asp-for="Entity.NombreProducto" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.PrecioProducto" class="form-label">Precio Producto</label>
                    <input type="text" class="form-control" asp-for="Entity.PrecioProducto" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.CantidadProducto" class="form-label">Cantidad Producto</label>
                    <input type="text" class="form-control" asp-for="Entity.CantidadProducto" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Estado" class="form-label">Estado</label>
                    <input type="text" class="form-control" asp-for="Entity.Estado" maxlength="250" required>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar": "Agregar")
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script defer src="~/App/Orden/Edit.js"></script>
}